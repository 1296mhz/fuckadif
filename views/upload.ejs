<% include partials/head %>

<body class="theme-red">
    <!-- Page Loader -->
    <%- include('components/pageLoader', {}); %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <%- include('components/overlayForSideBars', {}); %>
    <!-- #END# Overlay For Sidebars -->
    <!-- Search Bar -->
    <%- include('components/searchBar', {}); %>
    <!-- #END# Search Bar -->
    <!-- Top Bar -->
    <%- include('components/topBar', {title: title}); %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <%- include('components/leftSideBar', {
             menu: menu
        }); %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <%- include('components/rightSideBar', {}); %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <!-- Block Header -->
        <%- include('components/blockHeader', {
          viewName: 'Загрузка'
        }); %>
            <!-- #END# Block Header -->
               <!-- File Upload | Drag & Drop OR With Click & Choose -->
               <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                FILE UPLOAD - DRAG & DROP OR WITH CLICK & CHOOSE
                                <small>Taken from <a href="http://www.dropzonejs.com/" target="_blank">www.dropzonejs.com</a></small>
                            </h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <form action="/upload" id="frmFileUpload" class="dropzone" method="post" enctype="multipart/form-data">
                                <div class="dz-message">
                                    <div class="drag-icon-cph">
                                        <i class="material-icons">touch_app</i>
                                    </div>
                                    <h3>Перетащите сюда файл, или нажмите для выбора.</h3>
                                    <em>(Файл <strong>не</strong> должен превышать 500кб.)</em>
                                </div>
                                <div class="fallback">
                                    <input name="file" type="file" multiple />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# File Upload | Drag & Drop OR With Click & Choose -->
        </div>
    </section>
    <!-- Libs Js -->
    <%- include('libs/upload', {}); %>
    <!-- #END# Libs Js -->
</body>

</html>